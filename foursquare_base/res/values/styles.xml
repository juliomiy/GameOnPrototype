<style name="CustomWindowTitle" parent="android:WindowTitle">
          <item name="android:textAppearance">@style/CustomWindowTitleText</item>
          <item name="android:shadowDx">10</item>
          <item name="android:shadowDy">15</item>
          <item name="android:shadowRadius">5</item>
          <item name="android:shadowColor">#1155CC</item>
 </style>
 <style name="CustomWindowTitleText" parent="android:TextAppearance.WindowTitle">
          <item name="android:singleLine">true</item>
          <item name="android:textSize">20dip</item>
          <item name="android:textColor">@color/title_color_dark</item>
          <item name="android:textStyle">bold|italic</item>
</style>
<style name="WindowTitleBackground">
        <item name="android:background">@drawable/window_title_background</item>
 </style>
 <style name="StandardEditText" parent="android:Widget.EditText">
     <item name="android:maxLines">1</item>
     <item name="android:layout_width">wrap_content</item>
     <item name="android:layout_height">wrap_content</item>
    <!--  <item name="android:minWidth">75.5dip</item>  -->
 </style>
 <style name="StandardPasswordEditText" parent="android:Widget.EditText">
     <item name="android:maxLines">1</item>
     <item name="android:layout_width">wrap_content</item>
     <item name="android:layout_height">wrap_content</item>
     <item name="android:inputType">textPassword</item>
 </style>
 <style name="StandardEmailEditText" parent="android:Widget.EditText">
     <item name="android:maxLines">1</item>
     <item name="android:layout_width">wrap_content</item>
     <item name="android:layout_height">wrap_content</item>
     <item name="android:inputType">textEmailAddress</item>
 </style>
 <style name="StandardTextView" parent="android:Widget.TextView">
     <item name="android:maxLines">1</item>
     <item name="android:padding">12dip</item>
     <item name="android:layout_marginBottom">5dip</item>
     <item name="android:layout_width">wrap_content</item>
     <item name="android:layout_height">wrap_content</item>
 </style>
 <style name="StandardButton"  parent="android:Widget.Button">
     <item name="android:layout_width">wrap_content</item>
     <item name="android:layout_height">wrap_content</item>
 </style>
<style name="CancelButton" parent="android:Widget.Button">
     <item name="android:layout_width">wrap_content</item>
     <item name="android:layout_height">wrap_content</item>
 </style>
    <style name="StandardListView" parent="android:Widget.ListView">
